<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Discography</title>
    <style>
        .form-container {
            max-width: 600px; /* Define un ancho máximo para pantallas grandes */
            margin: 0 auto; /* Centra el formulario en pantallas grandes */
        }

        .form-control {
            width: 100%; /* Asegura que los campos de formulario ocupen todo el ancho del contenedor */
        }

        @media (max-width: 768px) {
            .form-container {
                width: 90%; /* Para pantallas pequeñas, ajusta el ancho del contenedor del formulario al 90% */
            }
        }
    </style>
</head>
<body class="bg-light text-dark">
    <%- include('./partials/Navbar.ejs') %>
    <div class="container mt-4 form-container">
        <% if (locals.error) { %> 
            <div class="alert alert-danger"> <%= error %></div>
        <% } %>
        <form action="/album" method="POST" enctype="multipart/form-data">
            <%- include('./partials/formInput.ejs') %>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Add Album</button>
            </div>
        </form>
    </div>
    <%- include('./partials/script.ejs') %>
</body>
</html>
